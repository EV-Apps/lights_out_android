<?xml version="1.0" encoding="utf-8"?>

<android.support.percent.PercentRelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/menu_screen_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="@string/lights_out_title"
        android:textColor="@color/colorAccent"
        android:textSize="50sp"
        app:layout_heightPercent="20%"
        app:layout_widthPercent="100%" />

    <LinearLayout
        android:id="@+id/menu_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/menu_screen_title"
        android:orientation="horizontal"

        >

        <LinearLayout
            android:id="@+id/menu_ll0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <Button
                android:id="@+id/button_play"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"


                android:text="@string/button_classic"
                android:enabled="true"
                android:background="@drawable/buttonshape"
                style="@style/AppTheme.ButtonStyle" />

            <Button
                android:id="@+id/button_howtoplay"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"


                android:text="@string/button_how_to_play"
                android:enabled="true"
                android:background="@drawable/buttonshape"
                style="@style/AppTheme.ButtonStyle" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_ll1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_todo"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"


                android:text="@string/button_deluxe"
                android:enabled="true"
                android:background="@drawable/buttonshape"
                style="@style/AppTheme.ButtonStyle" />

            <Button
                android:id="@+id/button_about"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"

                android:text="@string/button_about"
                android:enabled="true"
                android:background="@drawable/buttonshape"
                style="@style/AppTheme.ButtonStyle" />
        </LinearLayout>

    </LinearLayout>

</android.support.percent.PercentRelativeLayout>
