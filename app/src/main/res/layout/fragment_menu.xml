<?xml version="1.0" encoding="utf-8"?>

<android.support.percent.PercentRelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    style="@style/AppTheme">


    <TextView
        android:id="@+id/menu_screen_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="@string/lights_out_title"
        android:textColor="@color/black_pure"
        android:textSize="50sp"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="20%"
        />

    <GridLayout
        android:id="@+id/menu_gridlayout_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/menu_screen_title"
        android:columnCount="2"
        android:rowCount="2"
        >


        <Button
            android:id="@+id/bClassic"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:text="@string/button_classic"
            android:textSize="30sp"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="@dimen/md_icon_margin" />

        <Button
            android:layout_margin="@dimen/md_icon_margin"
            android:id="@+id/bDeluxe"
            android:layout_width="0dip"
            android:layout_height="0dip"
            android:text="@string/button_deluxe"
            android:textSize="30sp"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" />

        <Button
            android:layout_margin="@dimen/md_icon_margin"
            android:id="@+id/bHowToPlay"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:text="@string/button_how_to_play"
            android:textSize="30sp"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1" />

        <Button
            android:layout_margin="@dimen/md_icon_margin"
            android:id="@+id/bAbout"
            android:layout_width="0dip"
            android:layout_height="0dip"
            android:text="@string/button_about"
            android:textSize="30sp"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1" />
    </GridLayout>

</android.support.percent.PercentRelativeLayout>
